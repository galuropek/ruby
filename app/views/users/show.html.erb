
<%= link_to "Edit profile", edit_user_path(@user), :class => 'btn btn-warning' %>

<h1>Your created posts:</h1>

<table class="table">
  <thead class="thead-dark">
  <tr>
    <th scope="col">#</th>
    <th scope="col">Title</th>
    <th scope="col">Created at</th>
    <th scope="col">Some action (update, delete)</th>
  </tr>
  </thead>
  <tbody>
  <% current_user.posts.each_with_index do |post, index| %>
    <tr>
      <th scope="row"><%= index + 1 %></th>
      <td><%= post.title %></td>
      <td><%= post.created_at %></td>
      <td>
        <%= link_to "Edit event", edit_post_path(post), :class => 'btn btn-dark' %>
        <%= link_to "Delete", post_path(post), method: :delete, data: {confirm: "Вы уверены, что хотите удалить этот пост?"}, :class => 'btn btn-danger' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>